---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { TheStory as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section id="about" class="relative py-20 bg-[#0a0f0d]">
  <WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl ${classes?.container ?? ''}`} bg={bg}>
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h3 class="text-3xl font-serif mb-8 text-center">{title}</h3>
        <p class="text-lg leading-relaxed mb-6 text-gray-300">
          {subtitle}
        </p>
        <div class="grid md:grid-cols-3 gap-8 mt-12">
          <div class="bg-[#131a16] p-6 rounded-lg transform hover:scale-105 transition-transform">
            <h4 class="text-xl font-serif mb-4 text-emerald-400">Ancient Magic</h4>
            <p class="text-gray-400">
              Discover a complex system of nature-based magic, where every spell is tied to the ancient forests.
            </p>
          </div>
          <div class="bg-[#131a16] p-6 rounded-lg transform hover:scale-105 transition-transform">
            <h4 class="text-xl font-serif mb-4 text-emerald-400">Dark Mystery</h4>
            <p class="text-gray-400">
              Unravel the secrets of the Grove's past as you follow Aria's journey into its depths.
            </p>
          </div>
          <div class="bg-[#131a16] p-6 rounded-lg transform hover:scale-105 transition-transform">
            <h4 class="text-xl font-serif mb-4 text-emerald-400">Hidden World</h4>
            <p class="text-gray-400">
              Experience a richly detailed world where nature and magic intertwine in unexpected ways.
            </p>
          </div>
        </div>
      </div>
    </div>
  </WidgetWrapper>
</section>
